<div class="mdc-dialog__container">
  <div class="mdc-dialog__surface">
    <h2 class="mdc-dialog__title" id="xui-dialog-title">{{@title}}</h2>
    <div class="mdc-dialog__content" id="xui-dialog-content">
      {{yield}}
    </div>
    <footer class="mdc-dialog__actions">
      {{#each @buttons as |button|}}
        {{#xui-button
          data-mdc-dialog-action=button.name
          class=(if button.default "mdc-dialog__button mdc-dialog__button--default" "mdc-dialog__button")}}
          {{button.name}}
        {{/xui-button}}
      {{/each}}
    </footer>
  </div>
</div>

<div class="mdc-dialog__scrim"></div>
