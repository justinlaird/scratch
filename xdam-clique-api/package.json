{
  "name": "xdam-clique-api",
  "version": "0.0.2",
  "main": "start.js",
  "private": true,
  "bin": {
    "clique-cli": "./bin/cli.js"
  },
  "scripts": {
    "start": "node start.js",
    "start:auto": "./node_modules/.bin/nodemon --watch . --ext 'js' --exec 'yarn run start'",
    "start:auto:inspect": "yarn run inspect:notice:start && ./node_modules/.bin/nodemon --inspect --watch . --ext 'js' --exec 'yarn run start'",
    "test": "yarn run lint:js && yarn run test:qunit && yarn run test:hapi",
    "test:qunit": "NODE_ENV=test SERVER_PORT=16008 SERVER_HOSTNAME='127.0.0.1' SERVER_ADDRESS='127.0.0.1' ./node_modules/.bin/qunit test --seed",
    "test:auto": "./node_modules/.bin/nodemon --watch . --ext 'js' --exec 'yarn run test'",
    "inspect:notice:start": "echo '\nFirst open devtools for Node in Chrome connected to port 9229\n'",
    "lint:js": "node_modules/.bin/eslint .",
    "lint:js:fix": "yarn run lint:js --fix",
    "start:prod": "pm2 startOrRestart start.config.js --only clique-api-production",
    "start:prod:docker": "pm2-runtime start start.config.js --only clique-api-production",
    "start:api:local": "pm2 startOrRestart start.config.js --only clique-api-development",
    "start:embertest": "pm2 startOrRestart start.config.js --only clique-api-embertest",
    "test:hapi": "./node_modules/.bin/lab -a code -t 95 -L -v --shuffle",
    "test:hapi:cov:html": "yarn run test:hapi -r html -o coverage.html",
    "test:hapi:auto": "./node_modules/.bin/nodemon --watch . --ext 'js' --exec 'yarn run test:hapi'",
    "test:hapi:auto:inspect": "./node_modules/.bin/nodemon --inspect --watch . --ext 'js' --exec 'yarn run test:hapi'",
    "mysql:tail:proper": "tail -f `pwd`/logs/mysql.log",
    "mysql:tail": "VERBOSE_SQL_LOGGING=1 tail -f ./logs/clique-sql.log | ./node_modules/.bin/bunyan",
    "mysql:start": "mysql.server stop && mysql.server start --general_log --general-log-file=`pwd`/logs/mysql.log"
  },
  "devDependencies": {
    "@types/hapi": "^17.6.4",
    "@types/node": "^10.12.10",
    "@types/qunit": "^2.5.2",
    "code": "^5.2.4",
    "eslint": "^5.9.0",
    "lab": "^18.0.0",
    "lolex": "^3.0.0",
    "nodemon": "^1.18.7",
    "qunit": "^2.8.0",
    "sinon": "^7.1.1"
  },
  "dependencies": {
    "@gar/hapi-json-api": "^3.0.2",
    "@pm2/io": "^2.4.7",
    "aws-sdk": "^2.363.0",
    "bluebird": "^3.5.3",
    "boom": "^7.2.2",
    "bossy": "^4.0.3",
    "bunyan": "^1.8.12",
    "catbox-redis": "^4.2.4",
    "clique-seeds": "0.0.8",
    "config": "^3.0.0",
    "crumb": "^7.2.3",
    "dotenv": "^6.0.0",
    "express": ">=3 <5",
    "glue": "^5.0.0",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "hapi": "^17.8.1",
    "hecks": "^2.0.0",
    "hoek": "^6.0.4",
    "ioredis": "^4.0.0",
    "joi": "^14.3.0",
    "jsonapi-server": "https://github.com/XDAM/jsonapi-server.git#development",
    "jsonapi-store-relationaldb": "^5.0.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.10",
    "lodash-inflection": "^1.5.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.2",
    "mysql2": "^1.6.4",
    "node-fetch": "^2.3.0",
    "pluralize": "^7.0.0",
    "portfinder": "^1.0.19",
    "supertest": "^3.1.0",
    "susie": "^3.0.0",
    "uuid": "^3.3.2"
  }
}
